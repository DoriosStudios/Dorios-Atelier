{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "utilitycraft:diamond_glove",
            "render_controllers": ["controller.render.utilitycraft_glove"],
            "materials": {
                "default": "entity_alphatest",
                "enchanted": "entity_alphatest_glint"
            },
            "textures": {
                "default": "textures/items/glove/diamond_gloves",
                "enchanted": "textures/misc/enchanted_item_glint"
            },
            "geometry": {
                "default": "geometry.utilitycraft.gloves",
                "first_person": "geometry.utilitycraft.gloves_first_person"
            },
            "animations": {
                "invisible": "animation.utilitycraft.gloves.invisible"
            },
            "scripts": {
                "animate": [
                    {
                        "invisible": "c.is_first_person && q.is_item_equipped('main_hand') && !q.equipped_item_any_tag('slot.weapon.mainhand', 'utilitycraft:is_glove')"
                    }
                ],
                "pre_animation": [
                    "variable.is_first_person = query.is_first_person;"
                ]
            }
        }
    }
}
